<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ittest.cs.wificonnection.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:text="当前wifi"/>
    <TextView
        android:id="@+id/tv_wifi"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:textSize="20sp"
        android:text="已绑定wifi"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_wifi"
        android:textSize="20sp"
        android:text="记得打卡"/>

    <TextView
        android:id="@+id/tv_btnname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="是否监听wifi"
        android:layout_centerInParent="true"

        />
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_btnname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:onClick="clickon"
            android:id="@+id/button_btn_on"
            android:text="开启"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="clickoff"
            android:id="@+id/button_btn_off"
            android:text="关闭"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入要通知的内容："
        android:layout_marginRight="80dp"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:onClick="clicktext"
        android:id="@+id/button_text"
        android:text="保存"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
